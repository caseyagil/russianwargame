<%= form_for @job do |f| %>
<% if @job.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:" %>
  </h2>
  <ul>
    <% @job.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>
<table class="display">
  <tr>
    <td>
      <%= f.label :title %>
    </td>
    <td>
      <%= f.text_field :title %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :company %>
    </td>
    <td>
      <%= f.text_field :company %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :description %>
    </td>
    <td>
      <%= f.text_area :description %>
    </td>
  </tr>
</table>
<div class="actions">
  <%= f.submit 'Save' %>
</div>
<% end %>
